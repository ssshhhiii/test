.box{
  width: 750rpx;
}
.navigation{
  display: flex;
}
.navigation navigator{
  width: 25%;
  padding: 9rpx;
}
navigator image{
  width: 100%;
}
.titlt image{
  width: 100%;
}
.floor{
  padding-bottom: 40rpx;
  
}
.box2{
  margin-top: 40rpx;
}
.box2:nth-child(1){
  margin-top: 35rpx;
}
.pic{
  display: block;
  content: "";
  overflow: hidden;
  padding-left: 8rpx;
}
.pic navigator{
  float: left;
  width: 32.8%;
}
.pic navigator:nth-last-child(-n+4){
  height: 26.8vw;
}
.pic navigator:nth-child(2n){
  margin-right: 6rpx;
  margin-left: 4rpx;
}
.pic navigator:nth-child(2),.pic navigator:nth-child(3){
  margin-bottom: 5rpx;
}
.pic navigator image{width: 100%;height: 100%;}
